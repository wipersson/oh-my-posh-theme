{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
	  {
          "type": "time",
          "style": "plain",
          "foreground": "#00C5C7",
          "properties": {
            "time_format": "[15:04:05]",
            "prefix": ""
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#77E4F7",
          "properties": {
            "prefix": "",
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#FFE700",
          "properties": {
            "prefix": "",
			      "display_stash_count": false,
            "display_upstream_icon": true,
            "display_status": true,
            "status_colors_enabled": false
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#D4E157",
          "properties": {
            "prefix": "-\u276F",
            "always_enabled": true,
            "error_color": "#FF5252",
            "display_exit_code": false
          }
        }
      ]
    }
  ]
}
